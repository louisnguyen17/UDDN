@model ProductManagement.Models.Product
@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<style>
    .delete-card {
        background-color: #fff3f3;
        border: 1px solid #f5c2c2;
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: auto;
    }

    .delete-card h2 {
        color: #d63333;
        text-align: center;
        margin-bottom: 20px;
    }

    .delete-card dt {
        font-weight: bold;
    }

    .delete-card dd {
        margin-bottom: 10px;
    }

    .btn-delete {
        background-color: #d63333;
        border-color: #d63333;
    }

    .btn-delete:hover {
        background-color: #a71d2a;
        border-color: #a71d2a;
    }

    .btn-cancel {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .btn-cancel:hover {
        background-color: #5a6268;
        border-color: #545b62;
    }
</style>

<div class="delete-card mt-5">
    <h2>Xóa sản phẩm</h2>
    <hr />

    <h5 class="text-center">Bạn có chắc muốn xóa sản phẩm này không?</h5>

    <dl class="row mt-4">
        <dt class="col-sm-4">Tên sản phẩm</dt>
        <dd class="col-sm-8">@Model.Name</dd>

        <dt class="col-sm-4">Giá</dt>
        <dd class="col-sm-8">@Model.Price.ToString("N0") đ</dd>

        <dt class="col-sm-4">Tồn kho</dt>
        <dd class="col-sm-8">@Model.Stock</dd>

        <dt class="col-sm-4">Mô tả</dt>
        <dd class="col-sm-8">@Model.Description</dd>
    </dl>

    <form asp-action="Delete" method="post" class="text-center mt-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-delete me-2">Xóa</button>
        <a asp-action="Index" class="btn btn-cancel">Hủy</a>
    </form>
</div>
